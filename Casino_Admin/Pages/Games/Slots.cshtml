@page
@model SlotsModel
@{
 ViewData["Title"] = "Slots Game";
}
<h2>Slots Game</h2>
<form method="post" class="mb-4">
 <div class="mb-3">
 <label for="betAmount" class="form-label">Bet Amount</label>
 <input type="number" min="1" step="1" name="betAmount" id="betAmount" class="form-control" required />
 </div>
 <button type="submit" class="btn btn-primary">Spin</button>
</form>
@if (Model.Slots != null)
{
 <div class="display-4 mb-2">@Model.Slots</div>
}
@if (Model.Result != null)
{
 <div class="alert alert-info mt-3">@Model.Result</div>
}
@if (Model.Balance != null)
{
 <div class="mt-2">Your Balance: <strong>@Model.Balance</strong></div>
}
<a asp-page="/Games/Index" class="btn btn-secondary mt-3">Back to Games</a>