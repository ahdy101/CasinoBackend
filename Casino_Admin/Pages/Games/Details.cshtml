@page "{id:int}"
@model GameDetailsModel
@{
    ViewData["Title"] = "Game Details";
}
<h2>Game Details</h2>
<div class="mb-3">
    <strong>Game ID:</strong> @Model.GameId
</div>
<div class="mb-3">
    <strong>Game Name:</strong> @Model.GameName
</div>
<a asp-page="/Games/Index" class="btn btn-secondary">Back to Games</a>