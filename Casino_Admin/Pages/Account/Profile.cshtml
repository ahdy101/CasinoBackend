@page
@model ProfileModel
@{
 ViewData["Title"] = "Profile";
}
<h2>Your Profile</h2>
<div class="mb-3">
 <strong>Username:</strong> @Model.Username
</div>
<div class="mb-3">
 <strong>Balance:</strong> @Model.Balance
</div>
<div class="mb-3">
 <strong>Registered:</strong> @Model.CreatedAt.ToShortDateString()
</div>
<a asp-page="/Index" class="btn btn-secondary mt-2">Back to Home</a>